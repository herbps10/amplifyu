<html>
  <head>
    <script src='//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js'></script>
    <script src='js/ember-0.9.8.1.js'></script>
    <script src='js/application.js'></script>
  </head>

  <body>
    <script type='text/x-handlebars'>
      {{#view App.PlaylistView}}
        <ul>
          {{#each playlists}}
            <li>{{name}}</li>
          {{/each}}
        </ul>
      {{/view}}
    </script>

    <script type='text/x-handlebars'>
      <input type='text' class='new-playlist'> <input type='submit' {{action "addEvent" target="App.PlaylistController"}}>
    </script>
  </body>
</html>
